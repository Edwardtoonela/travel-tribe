<div class="fixed-top mb-4">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="logo">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "tribe_logo_2.png" %>
      <% end %>
    </div>
    <div class="wrapping">
      <div class="search row">
        <%= form_with url: "/", method: :get do |form| %>
          <%= form.text_field :query, class: "search searchTerm", placeholder: "search..."%>
          <div class ="searchButton">
          <%= image_submit_tag('https://res.cloudinary.com/dhilged09/image/upload/v1647366082/development/magnifying-glass-solid_k2gshp.svg', class: "style_image") %>
        <% end %>
        </div>
      </div>
  </div>




  <div class="dropdown">
    <button class="navbar-toggler dropdown-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <!-- NEED TO REPLACE THE AVATAR FOR CURRENT USER NAME  -->
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
          <!--  <%= link_to "Home", root_path, class: "nav-link" %> -->
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
            <!--<%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>-->
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "users/id", class: "dropdown-item" %>
              <%= link_to "Messages", "trips/id/chatrooms/id", class: "dropdown-item" %>
              <%= link_to "Create a trip", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  </div>
</div>
